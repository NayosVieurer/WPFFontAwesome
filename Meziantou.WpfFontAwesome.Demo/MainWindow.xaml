<Window x:Class="Meziantou.WpfFontAwesome.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="clr-namespace:Meziantou.WpfFontAwesome;assembly=Meziantou.WpfFontAwesome"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <WrapPanel>
            <TextBlock Text="{fa:Icon Beer}" Style="{StaticResource FontAwesomeSolid}" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <TextBlock Text="{fa:Icon Cog}" Style="{StaticResource FontAwesomeSolidSpin}" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <TextBlock Text="{fa:Icon Spinner}" Style="{StaticResource FontAwesomeSolidSpin}" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <TextBlock Text="{fa:Icon Spinner}" Style="{StaticResource FontAwesomeSolidPulse}" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <TextBlock Text="{fa:Icon Icon=FontAwesome}" Style="{StaticResource FontAwesomeBrand}" FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
        </WrapPanel>

    </Grid>
</Window>
